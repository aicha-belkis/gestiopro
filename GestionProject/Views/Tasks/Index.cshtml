@model GestionProject.ViewModels.TaskViewModel
@{ Layout = "_DashboardLayout"; }
<div id="page-content-wrapper">

   
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="txt-themecolor">Tasks</h3>
        </div>
        <div class="col-md-7 align-self-center">

        </div>

    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">

                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@@mdo">Add New Task </button>


                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add Task</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="form-group">
                                                <label>Teams</label>
                                                <select id="TeamId"  name=" TeamId" class="form-control">
                                                    <option selected="">Mobile application</option>
                                                    
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="message-text" class="col-form-label">Due Date:</label>
                                                <input type="text"  asp-for="DueDate" class="form-control" id="completed">
                                            </div>

                                            <div class="form-group">
                                                <label for="message-text" class="col-form-label">Task name :</label>
                                                <textarea class="form-control" asp-for=" NameTask" id="taskn"></textarea>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Add</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>




            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <input class="form-control" id="myInput" type="text" placeholder="Search..">
                        <br>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> Task Name </th>
                                        <th> DueDate</th>
                                      
                                        <th class="text-nowrap">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Tasks in model)
                                    {
                        <tr>
                            <td>@Tasks.TaskName</td>
                            <td>@Tasks.DueDate</td>
                           
                            <td class="text-nowrap">
                                <a href="#" data-toggle="tooltip" data-original-title="Edit"> <i class="fas fa-pencil-alt text-inverse mr-1"></i> </a>
                                <a href="#" data-toggle="tooltip" data-original-title="Close"> <i class="fas fa-times text-danger"></i> </a>
                            </td>working
                        </tr>
}

                                </tbody>
                            </table>
                        </div>
                        <!-- /#page-content-wrapper -->
                        <div>
                            <ul class="nav nav-pills">
                                @{ for (int i = 0; i < ViewBag.totalPages; i++)
                                                {
                                                    string className = "";
                                                    if (i == ViewBag.CurrentPage)
                                                    {
                                                        className = "active";
                                                    }

                                    <li class="@className">
                                        <a asp-action="Index" asp-route-page="@i">@i</a>
                                    </li> } }
                            </ul>
                        </div>
