@model GestionProject.ViewModels.LoginViewModel
@{ ViewData["Title"] = "Welcome"; }

<main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">
        <div class="card login-card">
            <div class="row no-gutters">
                <div class="col-md-5">
                    <img src="https://images.unsplash.com/photo-1542744173-05336fcc7ad4?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1382&q=80" alt="login" class="login-card-img">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <div class="brand-wrapper">
                            <img src="https://www.freelogodesign.org/file/app/client/thumb/6d79cfa0-6ca2-4c11-93a5-cfa7c9bab9ad_200x200.png?1614093319243" alt="logo" class="logo">
                        </div>
                        <p class="login-card-description" style="font-family: italic;">Sign into your account</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="user" class="sr-only">User Name</label>
                                <input asp-for="Username" id="email" class="form-control" placeholder="USER NAME">
                            </div>
                            <div class="form-group mb-4">
                                <label for="password" class="sr-only">Password</label>
                                <input style="color:black" type="password" asp-for="Password" name="password" id="password" class="form-control" placeholder="***********">
                            </div>
                            <input name="login" id="login" class="btn btn-block login-btn mb-4" type="submit" value="Login">
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
