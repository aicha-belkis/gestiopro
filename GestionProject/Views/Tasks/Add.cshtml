
@model GestionProject.ViewModels.TaskViewModel
@{ Layout = "_DashboardLayout"; }
<!--model for create new memebr-->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="modal fade" id="addTasks" >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="addTeamMember">Create New MemberTeam </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form action="Create">
                                    <div class="modal-body">

                                        <div class="form-group">
                                            <label>Teams</label>
                                            <select id="TeamId" name=" TeamId" class="form-control">
                                                <option selected="">Mobile application</option>

                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="message-text" class="col-form-label">Due Date:</label>
                                            <input type="text" asp-for="DueDate" class="form-control" id="completed">
                                        </div>

                                        <div class="form-group">
                                            <label for="message-text" class="col-form-label">Task name :</label>
                                            <textarea class="form-control" asp-for=" NameTask" id="taskn"></textarea>
                                        </div>
                                     </div>
                            </form>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-save="modal"> Save</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

